# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# be nice
alias please=sudo

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# shortcut for finding files
alias f="find ./ -name "

# List all files colorized in long format
alias l="ls -l ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -la ${colorflag}"

# Always use color output for `ls`
if [[ "$OSTYPE" =~ ^darwin ]]; then
	alias ls="command ls -G"
else
	alias ls="command ls --color"
fi

# IP addresses
alias localip="ipconfig getifaddr en1"

# Shortcuts
alias v="nvim"

# Scratchpad editor
alias sp='nvim $NOTES_SP_DIR/scratchpad-$(date +"%Y-%m-%d").md'

# File size
alias filesize="stat -f \"%z bytes\""

# GIT aliases
alias g="git"
alias ga="git add"
alias gaa="git add --all"
alias gb="git branch"
alias gc="git commit -v"
alias gca="git commit -v -a"
alias gcb="git checkout -b"
alias gcl="git clone --recursive"
alias gcm="git checkout main"
alias gco="git checkout"
alias gd="git diff"
alias gl="git pull"
alias glom="git pull origin master"
alias glo="git log --oneline --max-count=10"
alias glg="git log --stat --color"
alias glgg="git log --graph --color"
alias glgga="git log --graph --decorate --all"
alias glgm="git log --graph --max-count=10"
alias gm="git merge"
alias gp="git push -u"
alias gpd="git push --dry-run"
alias gpoat="git push origin --all && git push origin --tags"
alias gpristine="git reset --hard && git clean -dfx"
alias grb="git rebase"
alias grbi="git rebase -i"
alias grh="git reset HEAD"
alias grhh="git reset --hard HEAD"
alias gss="git status -s"
alias gst="git status"
alias gcurrbr="git status | head -n 1 | cut -d ' ' -f 3"

# Taskwarrior stuff
alias tl="task list"
alias ta="task add"

# Tmux
alias tma="tmux attach -t"
alias tmn="tmux new-session -s"

# Add pbcopy and pbpaste on linux
if ! (command -v pbcopy >/dev/null) && (command -v xclip >/dev/null); then
  alias pbcopy="xclip -selection clipboard"
  alias pbpaste="xclip -selection clipboard -o"
fi
