[alias]
    c = commit -am
    up = pull
    p = push
    s = status -s
    df = diff --color --color-words --abbrev
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    mu = !git ls-files -v | grep "^[[:lower:]]"
    rbc = rebase --continue
    rba = rebase --abort

[color]
    ui = true

[apply]
    whitespace = fix

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
  log = true
  tool = nvim

[mergetool "nvim"]
  cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[push]
    default = simple

[pull]
    rebase = true

[branch]
    autosetuprebase = always

[user]
    name = Gideon Farrell
    email = gideon@gtf.io
	signingkey = 63BB888422176CA4

[diff]
    tool = vimdiff

[help]
    autocorrect = 1

[init]
	defaultbranch = main
[commit]
	gpgsign = true
